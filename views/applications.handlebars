{{#if isak}}
    <form method="get" action="/applications/uploader">
        <button class="btn btn-primary">Új pályázat leadása</button>
    </form>
{{/if}}
<br>
<h3>Pályázatok:</h3>
<style>
    td {vertical-align: middle !important;}
    tr { height: 90px;}
</style>
<div class="table-responsive">
    <table class="table">
        <thead>
        <tr>
            <th>Kép</th>
            <th>Név</th>
            <th>Pályázat link</th>
            <th>Szavazás</th>
        </tr>
    {{#each arr}}
        {{#if myvote}}
        <tr bgcolor="#dbffe1">
        {{else}}
            <tr>
        {{/if}}
            <td><img src="{{picurl}}"></td>
            <td>{{name}}</td>
            <td ><a href="uploads/{{applicationpdf}}">{{applicationpdf}}</a></td>
        {{#if myvote}}
                <td ><form method="get" action="/vote/remove/{{fbid}}">
                    <button class="btn btn-danger">Mégsem szavazok rá!</button>
                </form></td>

        {{else}}
                <td ><form method="get" action="/vote/{{fbid}}">
                    <button class="btn btn-primary">Szavazok rá!</button>
                </form></td>
        {{/if}}

        </tr>
    {{/each}}
</table>
</div>